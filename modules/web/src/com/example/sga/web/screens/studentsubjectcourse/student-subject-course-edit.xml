<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://studentSubjectCourseEdit.caption"
        focusComponent="form"
        messagesPack="com.example.sga.web.screens.studentsubjectcourse">
    <data>
        <instance id="studentSubjectCourseDc"
                  class="com.example.sga.entity.StudentSubjectCourse">
            <view extends="_local">
                <property name="subject" view="_base"/>
                <property name="student" view="_base"/>
            </view>
            <loader/>
        </instance>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="editActions" spacing="true">
        <form id="form" dataContainer="studentSubjectCourseDc">
            <column width="350px">
                <pickerField id="subjectField" property="subject" captionProperty="code"/>
                <pickerField id="studentField" property="student" captionProperty="collegeNumber"/>
                <textField id="courseNoteField" property="courseNote"/>
                <textField id="examFinalNoteField" property="examFinalNote"/>
                <textField id="noteField" property="note"/>
            </column>
        </form>
        <hbox id="editActions" spacing="true">
            <button id="commitAndCloseBtn" action="windowCommitAndClose"/>
            <button id="closeBtn" action="windowClose"/>
        </hbox>
    </layout>
</window>
